# ================================ My Custom crazy keybinds
# Run scripts whenever i3 config run
exec_always --no-startup-id chdock

# move workspace to left and right monitors
# Literally just MOD+SHIFT+} to move the workspace to the right monitor,
# and MOD+SHIFT+{ to move the workspace left.
bindsym $mod+Shift+bracketleft move workspace to output up
bindsym $mod+Shift+bracketright move workspace to output down

# Key bind lock
bindsym $mod+l exec "i3lock -c 000000 -n"

# Suspend and lock
bindsym $mod+Shift+l exec "~/.bin/suspend"

